@model TaskItem

@{
    ViewData["Title"] = "Нове завдання";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Створення нового завдання</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Назва</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Опис</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Priority" class="form-label">Пріоритет</label>
                                <select asp-for="Priority" class="form-select">
                                    <option value="">Виберіть пріоритет</option>
                                    <option value="1">Низький</option>
                                    <option value="2">Середній</option>
                                    <option value="3">Високий</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DueDate" class="form-label">Термін виконання</label>
                                <input asp-for="DueDate" type="date" class="form-control" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">Категорія</label>
                            <select asp-for="Category" class="form-select">
                                <option value="">Виберіть категорію</option>
                                <option value="Робота">Робота</option>
                                <option value="Начання">Навчання</option>
                                <option value="Особисте">Особисте</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        @* <div class="mb-3 form-check">
                            <input asp-for="IsCompleted" class="form-check-input" />
                            <label asp-for="IsCompleted" class="form-check-label">Виконано</label>
                        </div> *@

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">Скасувати</a>
                            <button type="submit" class="btn btn-primary">Створити</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
