@model EditProfileViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">Edit Profile</h2>
                        <p class="text-muted">Update your personal information</p>
                    </div>

                    <form asp-action="EditProfile" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="UserName" class="form-control" placeholder="First Name" />
                            <label asp-for="UserName">User Name</label>
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email">Email address</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="ChangePassword" class="btn btn-outline-secondary">Change Password</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/account.js"></script>
    @if (TempData["Toast"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                showNotification('@TempData["Toast"]');
            });
        </script>
    }
}